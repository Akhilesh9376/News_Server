{
  "info": {
    "name": "News Backend API",
    "description": "Postman collection for News Application backend (Express + TypeScript). Includes auth and news endpoints with pagination and category filtering.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "token", "value": "" },
    { "key": "page", "value": "1" },
    { "key": "limit", "value": "10" },
    { "key": "category", "value": "sports" },
    { "key": "newsId", "value": "<replace-with-news-id>" }
  ],
  "item": [
    {
      "name": "Root",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Admin\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/v1/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "v1", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.token) { pm.collectionVariables.set('token', jsonData.token); }"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/v1/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "v1", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.token) { pm.collectionVariables.set('token', jsonData.token); }"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "x-auth-token", "value": "{{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/v1/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "v1", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "News",
      "item": [
        {
          "name": "Get All (paginated)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/news?page={{page}}&limit={{limit}}",
              "host": ["{{base_url}}"],
              "path": ["api", "news"],
              "query": [
                { "key": "page", "value": "{{page}}" },
                { "key": "limit", "value": "{{limit}}" }
              ]
            }
          }
        },
        {
          "name": "Get By Category (paginated)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/news/category/{{category}}?page={{page}}&limit={{limit}}",
              "host": ["{{base_url}}"],
              "path": ["api", "news", "category", "{{category}}"],
              "query": [
                { "key": "page", "value": "{{page}}" },
                { "key": "limit", "value": "{{limit}}" }
              ]
            }
          }
        },
        {
          "name": "Get By Id",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/news/{{newsId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "news", "{{newsId}}"]
            }
          }
        },
        {
          "name": "Create",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "x-auth-token", "value": "{{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"heading\": \"Matchday Highlights\",\n  \"subheading\": \"Team A vs Team B\",\n  \"content\": \"A thrilling match with last-minute drama...\",\n  \"category\": \"sports\",\n  \"imageUrl\": \"https://example.com/image.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/news",
              "host": ["{{base_url}}"],
              "path": ["api", "news"]
            }
          }
        },
        {
          "name": "Update",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "x-auth-token", "value": "{{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"heading\": \"Updated Matchday Highlights\",\n  \"subheading\": \"Team A vs Team B (Updated)\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/news/{{newsId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "news", "{{newsId}}"]
            }
          }
        },
        {
          "name": "Delete",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "x-auth-token", "value": "{{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/news/{{newsId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "news", "{{newsId}}"]
            }
          }
        }
      ]
    }
  ]
}